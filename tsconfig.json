{
	"extends": "./.svelte-kit/tsconfig.json", // Extiende la configuraci√≥n generada por SvelteKit
	"compilerOptions": {
	  "moduleResolution": "node",
	  "esModuleInterop": true,
	  "resolveJsonModule": true,
	  "allowJs": true,
	  "checkJs": true,
	  "declaration": true,
	  "emitDeclarationOnly": true,
	  "forceConsistentCasingInFileNames": true,
	  "module": "esnext",
	  "strict": true,
	  "skipLibCheck": true,
	  "sourceMap": true,
	  "target": "esnext",
	  "types": [
		"svelte",
		"vite/client",
	  ]
	},
	"include": [
	  "src/**/*.d.ts",
	  "src/**/*.js",
	  "src/**/*.ts",
	  "src/**/*.svelte",
	  ".svelte-kit/ambient.d.ts",
	  "**/*.js"
	],
	"exclude": [
	  "node_modules/*",
	  "**/*.spec.ts",
	  "**/*.test.ts",
	  "**/dist/*",
	  "**/build/*"
	]
  }